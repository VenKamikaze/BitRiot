<rml>
  <head>
    <title>Score</title>
    <link rel="stylesheet" type="text/css" href="rkt.rcss"/>
    <link rel="stylesheet" type="text/css" href="common.rcss"/>
    <link type="text/rcss" href="scoreboard.rcss"/>
  </head>

  <body class="background">
		
    <div class="menu-container">
      <div class="menu" data-model="scoreBoard">
        <h2>{{playerWin}}</h2>
          <div id="statsContainer">
            <div id="winnerStats">
              <p>Player {{playerWinNumber}} survived {{gameLengthSeconds}} seconds.</p>
              <p>Player {{playerWinNumber}} made {{numberEggsPlaced}} eggs.</p>
              <p>Player {{playerWinNumber}} placed {{numberBombsPlaced}} explosives.</p>
            </div>
          </div>
	  <button class="tabbed" id="quickstart" autofocus tabindex="1" onclick="start">Play Again</button><br />
	  <button class="tabbed" id="options" tabindex="2" escapeAction="1" onclick="open mainmenu.rml">Main Menu</button><br />
      </div>
    </div>
  </body>

</rml>
